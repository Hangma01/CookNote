<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cooknote.backend.mappers.AuthMapper">

	<resultMap type="User" id="userResultMap">
		<id property="userId" column="user_id" />
		<result property="id" column="id" />
	    <result property="name" column="name" />
	    <result property="password" column="password" />
	    <result property="email" column="email" />
	    <result property="nickname" column="nickname" />
	    <result property="profileImage" column="profile_image" />
	    <result property="createAt" column="create_at" />
	    <result property="updateAt" column="update_at" />
	</resultMap>

 

	<!-- 아이디 중복 체크 -->
	<select id="getExistsId" resultType="boolean">
		SELECT 
			EXISTS (SELECT 1 FROM USER WHERE USER_ID = #{id})
	</select>
	
	<!-- 닉네임 중복 체크 -->
	<select id="getExistsNickname" resultType="boolean">
		SELECT EXISTS (SELECT 1 FROM USER WHERE NICKNAME = #{nickname})
	</select>
	
	<!-- 이메일 중복 체크 -->
	<select id="getExistsEmail" resultType="boolean">
		SELECT EXISTS (SELECT 1 FROM USER WHERE EMAIL = #{email})
	</select>

	<!-- 회원 가입 -->
	<insert id="userJoin" parameterType="User">
		INSERT INTO USER (
        	ID, 
        	PASSWORD, 
        	NAME, 
        	NICKNAME, 
			EMAIL, 
			PROFILE_IMAGE
    	) VALUES (
        	#{id}, 
        	#{password}, 
        	#{name}, 
        	#{nickname}, 
        	#{email},
        	'FEFE.PNG'
    	)
	</insert>
	
	<!-- 아이디 찾기 - 요청 -->
	<select id="userFindIdAuthRequest" parameterType="User" resultType="boolean">
		SELECT EXISTS (SELECT 1 FROM USER WHERE NAME = #{name} AND EMAIL = #{email})
	</select>
	
	<!-- 아이디 찾기 -->
	<select id="userFindId" parameterType="User" resultMap="userResultMap">
		SELECT ID
		FROM USER
		WHERE NAME = #{name} AND EMAIL = #{email}
	</select>
	
	<!-- 비밀번호 찾기 - 요청 -->
	<select id="userFindPw" parameterType="User" resultMap="userResultMap">
		SELECT ID
		FROM USER
		WHERE ID = #{id} AND EMAIL = #{email}
	</select>
	
	<!-- 비밀번호 변경 -->
	<update id="updatePwReset" parameterType="User">
		UPDATE USER
		SET PASSWORD = #{password}
		WHERE ID = #{id}
	</update>
</mapper>
